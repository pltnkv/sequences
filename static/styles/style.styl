@require "s.styl"

body
	margin: 0
	padding: 0

html, body, .mainBox
	height 100%

.mainBox
	background-color aliceblue

.levelBox, .completeBox
	position absolute
	top 0
	width 100%

.levelBox_completedLabel
	position absolute
	top 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.2)
	opacity 0
	transition opacity 0.4s ease-out
	text-align center
	span
		font-size 28px
		font-family monospace
		margin-top 2px
		color #FFF
		opacity 0.3
		font-weight bold

.word
	position absolute
	width: 100%
	background-color burlywood
	font-family monospace
	text-align center
	font-size 20px
	transition all 0.2s ease-out

.word-selected
	background-color #DEA475
	z-index 1
	transition none
	box-shadow 0 3px 8px 0 rgba(0, 0, 0, .5)

.word-completed
	transition all 0.15s ease-out
	background-color #77d04b

.completeBox
	display none
	color blueviolet
	font-size 30px
	font-family monospace
	text-align center
	padding-top 50px